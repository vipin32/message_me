
<h2 class="my-3">Messages</h2>
<div class="row">
    <div class="col-sm-9">
        <div class="card my-3">
            <div class="card-body">
            
                <% @messages.each do |message| %>

                    <div class="alert alert-primary" role="alert">
                        <div class="row">
                            <div class="col-sm-8"><%= message.body %></div>
                            <div class="col-sm-4 text-right"><%= message.user.email %></div>
                        </div>
                    </div>

                <% end %>
            </div>
        </div>
    </div>

    <div class="col-sm-3 text-right">
        <div class="card my-3">
            <div class="card-body">
                <h5 class="text-center">Users Online</h5>
                <hr/>
                <button class="btn btn-success btn-block">David</button>
            </div>
        </div>
    </div>

</div>